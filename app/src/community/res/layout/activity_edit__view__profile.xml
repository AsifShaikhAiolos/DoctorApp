<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Edit_View_ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Edit Profile"
        android:elevation="@dimen/_2sdp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/IdProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_user"
            android:layout_margin="@dimen/_8sdp"
            android:layout_gravity="center"
            app:civ_border_width="2dp"
            app:civ_border_color="#0000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Picture"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
        <TextView
            android:id="@+id/lblSalution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Salutation"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

        <EditText
            android:id="@+id/idSalutation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/bg_curve_rectangle"
            android:fontFamily="@font/fontawesome_webfont"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Mr"
            android:inputType="textPassword"
            android:paddingLeft="32dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/_14ssp"
            app:boxBackgroundMode="none" />

            <TextView
                android:id="@+id/lblFName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="First Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

            <EditText
                android:id="@+id/idFName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/bg_curve_rectangle"
                android:fontFamily="@font/fontawesome_webfont"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="textPassword"
                android:hint="Enter First Name"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/lblFName"
                android:paddingBottom="10dp"
                android:textSize="@dimen/_14ssp"
                app:boxBackgroundMode="none" />


            <TextView
                android:id="@+id/lblLName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Last Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idFName"/>

            <EditText
                android:id="@+id/idLName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/bg_curve_rectangle"
                android:fontFamily="@font/fontawesome_webfont"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:hint="Enter Last Name"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/_14ssp"
                app:boxBackgroundMode="none" />



            <TextView
                android:id="@+id/lblFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Husband's/ Father Name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:id="@+id/idFamily"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/bg_curve_rectangle"
                android:fontFamily="@font/fontawesome_webfont"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:hint="Enter Last Name"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/lblsp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/_14ssp"
                app:boxBackgroundMode="none" />

        <TextView
            android:id="@+id/lblGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Gender"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >
            <RadioButton
                android:id="@+id/radioM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:checked="true"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Male"
                />
            <RadioButton
                android:id="@+id/radioF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Female"
                />
            <RadioButton
                android:id="@+id/radioO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Other"
                />
        </RadioGroup>

            <TextView
                android:id="@+id/contactTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Contact Number"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idsp"/>

            <EditText
                android:id="@+id/idContact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/bg_curve_rectangle"
                android:fontFamily="@font/fontawesome_webfont"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:hint="Enter Contact Number"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/contactTxt"
                android:paddingBottom="10dp"
                android:textSize="@dimen/_14ssp"
                app:boxBackgroundMode="none" />

            <TextView
                android:id="@+id/cityTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="City"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idContact"/>

            <EditText
                android:id="@+id/idCity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/bg_curve_rectangle"
                android:fontFamily="@font/fontawesome_webfont"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:hint="Enter City"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cityTxt"
                android:paddingBottom="10dp"
                android:textSize="@dimen/_14ssp"
                app:boxBackgroundMode="none" />

            <TextView
                android:id="@+id/stateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="State"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idCity"/>

            <EditText
                android:id="@+id/idState"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/bg_curve_rectangle"
                android:fontFamily="@font/fontawesome_webfont"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:hint="Enter State"
                android:paddingRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/stateTxt"
                android:paddingBottom="10dp"
                android:textSize="@dimen/_14ssp"
                app:boxBackgroundMode="none" />


            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/idState"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/bg_buttonshape"
                android:fontFamily="@font/fontawesome_webfont"
                android:gravity="center"
                android:text="Update"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="@dimen/_16ssp" />




    </LinearLayout>

    </LinearLayout>
    </ScrollView>
