<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doc_fragments.AccountActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_40sdp"
            android:paddingBottom="@dimen/_40sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingEnd="@dimen/_14sdp">

                <!--        <androidx.appcompat.widget.Toolbar-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="?attr/actionBarSize"-->
                <!--            app:layout_constraintTop_toTopOf="parent"-->
                <!--            app:layout_constraintStart_toStartOf="parent"-->
                <!--            android:background="@color/white"-->
                <!--            app:title="Account Details"-->
                <!--            app:titleTextColor="@color/black"-->
                <!--            android:id="@+id/toolbar" />-->



                <TextView
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Account Details"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/lblFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="First Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

                <EditText
                    android:id="@+id/idAFName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/bg_curve_rectangle"
                    android:fontFamily="@font/fontawesome_webfont"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="text"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="10dp"
                    android:hint="Enter First Name"
                    android:paddingRight="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/lblFName"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/_14ssp"
                    app:boxBackgroundMode="none" />


                <TextView
                    android:id="@+id/lblLName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Last Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idAFName"/>

                <EditText
                    android:id="@+id/idALName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/bg_curve_rectangle"
                    android:fontFamily="@font/fontawesome_webfont"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="text"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="10dp"
                    android:hint="Enter Last Name"
                    android:paddingRight="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/lblLName"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/_14ssp"
                    app:boxBackgroundMode="none" />



                <TextView
                    android:id="@+id/lblsp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Speciality"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idALName"/>

                <EditText
                    android:id="@+id/idAsp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/bg_curve_rectangle"
                    android:fontFamily="@font/fontawesome_webfont"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="text"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="10dp"
                    android:hint="Enter Speciality"
                    android:paddingRight="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/lblsp"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/_14ssp"
                    app:boxBackgroundMode="none" />



                <TextView
                    android:id="@+id/contactTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Contact Number"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idAsp"/>

                <EditText
                    android:id="@+id/idAContact"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/bg_curve_rectangle"
                    android:fontFamily="@font/fontawesome_webfont"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="number"
                    android:paddingLeft="@dimen/_10sdp"
                    android:hint="Enter Contact Number"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/contactTxt"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/_14ssp"
                    app:boxBackgroundMode="none" />

                <TextView
                    android:id="@+id/qualificationTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Qualification"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idAContact"/>

                <EditText
                    android:id="@+id/idAQualification"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/bg_curve_rectangle"
                    android:fontFamily="@font/fontawesome_webfont"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="text"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="10dp"
                    android:hint="Enter Qualification"
                    android:paddingRight="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/qualificationTxt"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/_14ssp"
                    app:boxBackgroundMode="none" />

                <TextView
                    android:id="@+id/experienceTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Experience"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idAQualification"/>

                <EditText
                    android:id="@+id/idAExperience"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/bg_curve_rectangle"
                    android:fontFamily="@font/fontawesome_webfont"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:inputType="number"
                    android:paddingLeft="@dimen/_10sdp"
                    android:hint="Enter Year Of Experience"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/experienceTxt"
                    android:paddingBottom="10dp"
                    android:textSize="@dimen/_14ssp"
                    app:boxBackgroundMode="none" />


                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/idAExperience"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_buttonshape"
                    android:fontFamily="@font/fontawesome_webfont"
                    android:gravity="center"
                    android:text="Update"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="@dimen/_16ssp" />





        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>