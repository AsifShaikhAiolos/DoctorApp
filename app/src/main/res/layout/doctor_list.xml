<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:local="http://schemas.android.com/tools"
    android:background="@color/colorgrey"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/crdDoctorProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:clickable="true"
        android:elevation="@dimen/_6sdp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/_2sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp">

        <ImageView
            android:id="@+id/IdProfile"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_doctor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/IdProfile"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/idDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/idTtxtpatientName"
                android:fontFamily="@font/fontawesome_webfont"
                android:text="@string/asif_shaikh"
                android:textColor="#000" />

            <TextView
                android:id="@+id/idnumber_of_slots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idDoctorName"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/idTxtmemberDate"
                android:fontFamily="@font/fontawesome_webfont"
                android:text="10"
                android:textColor="#000" />

            <TextView
                android:id="@+id/idPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/idnumber_of_slots"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/idTxtmemberDate"
                android:fontFamily="@font/fontawesome_webfont"
                android:text="1223456789"
                android:textColor="#000" />

        </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>