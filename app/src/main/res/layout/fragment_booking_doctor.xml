<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingDoctorFragment">


    <ImageView
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:id="@+id/ivBackArrow"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"
        android:padding="12dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_back_arrow"
        android:foreground="?android:attr/selectableItemBackground"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/ivBackArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:id="@+id/patientedit_layout">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_16sdp"
    android:layout_marginLeft="@dimen/_16sdp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:id="@+id/doctorprofileimg"
            android:paddingTop="@dimen/_8sdp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/doc_image2"
            android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/docName"
            android:text="Doctor name"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:alpha="0.9"
            android:layout_below= "@id/doctorprofileimg"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/docSpeciality"
            android:text="Cardiologist"
            android:textAlignment="center"
            android:layout_below="@id/docName"
            android:gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="16dp"
            android:textSize="@dimen/_12ssp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/WeekRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataNotAvailbe"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:textColor="#000"
            android:text="@string/slots_time_will_come_here"
            tools:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:visibility="gone"
            android:id="@+id/selectTime"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="16dp"
            android:textSize="@dimen/_12ssp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/slotTimeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"/>
        
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointments for"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/id_mail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_curve_rectangle"
            android:fontFamily="@font/fontawesome_webfont"
            android:hint="e.g.Heart,pain,Body ache,etc."
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/_15ssp"
            app:boxBackgroundMode="none" />

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnFamilyMember"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/bg_buttonshape"
                android:text="Add Family Member" />

            <Button
                android:id="@+id/btnFillQu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:background="@drawable/bg_buttonshape"
                android:text="Fill Questionnaire" />

        </LinearLayout>


