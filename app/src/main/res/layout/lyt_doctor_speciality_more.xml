<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/crdDoctorSpeciality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:clickable="true"
        android:elevation="@dimen/_6sdp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/_2sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/IdProfile"
                android:layout_width="70dp"
                android:layout_height="76dp"
                android:src="@drawable/doc_image2"
                android:layout_margin="@dimen/_8sdp"
                app:civ_border_width="2dp"
                app:civ_border_color="#0000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/IdProfile"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/idDoctorSpecialityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/fontawesome_webfont"
                    android:text="Cardiologists"
                    android:textColor="#000"
                    android:alpha="0.9"/>

                <TextView
                    android:id="@+id/idTotalSpecialitNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idDoctorName"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/fontawesome_webfont"
                    android:text="10 Doctors"
                    android:textColor="#000"
                    android:alpha="0.9"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:id="@+id/next"
               android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#000"
                local:srcCompat="@drawable/ic_baseline_navigate_next_24"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>