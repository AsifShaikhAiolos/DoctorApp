<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twilio.video.app.SplashScreenActivity">

    <ImageView
        android:id="@+id/doctorprofileimg"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="28dp"
        android:padding="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_lilac_insights_logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/app_name"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/fontawesome_webfont"
            android:layout_margin="@dimen/_16sdp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/colorApp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_8sdp">
        <Button
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/bg_buttonshape"
            android:clickable="true"
            android:fontFamily="@font/fontawesome_webfont"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="SIGN UP"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="@dimen/_16ssp" />
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_32sdp"
            android:background="@drawable/bordertext"
            android:clickable="true"
            android:fontFamily="@font/fontawesome_webfont"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="SIGN IN"
            android:textAlignment="center"
            android:textColor="@color/colorApp"
            android:textSize="@dimen/_16ssp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>