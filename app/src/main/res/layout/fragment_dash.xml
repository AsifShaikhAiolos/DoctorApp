<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fff">
    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar2"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:title="Dashboard"
        android:layout_height="?attr/actionBarSize"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar2"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
           android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/crdNo_of_booking"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="@dimen/_8sdp"
                android:backgroundTint="#fff"
                android:elevation="2dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/bookingimg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:gravity="center_horizontal"
                        android:text="Number of Bookings"
                        android:fontFamily="@font/fontawesome_webfont"
                        android:textAlignment="center"
                        android:textColor="@color/colorApp"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bookingtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bookingimg"
                        android:layout_margin="16dp"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdEarnings"
                android:layout_width="160dp"
                android:layout_height="160dp"
              android:layout_margin="@dimen/_8sdp"
                android:layout_toRightOf="@+id/crdNo_of_booking"
                android:elevation="2dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/doctorimg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/fontawesome_webfont"
                        android:text="Earnings"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorApp"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_below="@+id/doctorimg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_margin="@dimen/_16sdp">

                        <TextView
                            android:id="@+id/rsSymbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="\u20B9"
                            android:textColor="#000"
                            android:textSize="@dimen/_20ssp" />

                        <TextView
                            android:id="@+id/earntext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="525"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/crdCalender"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:elevation="@dimen/_2ssp"
                android:layout_below="@+id/crdEarnings"
               android:layout_margin="@dimen/_8sdp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/healthimg"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/calendarimg" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_healhprecautions"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_below="@+id/crdEarnings"
               android:layout_margin="@dimen/_8sdp"
                android:elevation="@dimen/_2sdp"
                android:layout_toRightOf="@+id/crdNo_of_booking"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/precautionsimg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:gravity="center_horizontal"
                        android:text="Upcoming Bookings"
                        android:fontFamily="@font/fontawesome_webfont"
                        android:textAlignment="center"
                        android:textColor="@color/colorApp"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/precautionstext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/precautionsimg"
                        android:layout_margin="16dp"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginBottom="-120dp"
            android:scaleType="fitXY"
            android:alpha="0.4"
            app:srcCompat="@drawable/bg_splash_logo"
            />
    </LinearLayout>
</LinearLayout>