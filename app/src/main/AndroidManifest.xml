<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.twilio.video.docapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.twilio.video.docapp.VideoApplication"
        android:allowBackup="false"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.twilio.video.docapp.MyFamilyActivity"></activity>
        <activity android:name="com.twilio.video.docapp.FillQuestActivity" />
        <activity android:name="com.twilio.video.docapp.SplashScreenActivity" />
        <activity android:name="com.twilio.video.docapp.community.debug.NewMainActivity" />
        <activity android:name="com.twilio.video.docapp.RegisterActivity" />
        <activity android:name="com.twilio.video.docapp.HomeActivity" />
        <activity android:name="com.twilio.video.docapp.LlistOfDoctorActivity" />
        <activity android:name="com.twilio.video.docapp.NewSplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.twilio.video.docapp.LoginActivity" />
        <activity android:name="com.twilio.video.docapp.MainActivity" />
        <activity android:name="com.twilio.video.docapp.BookingDoctorFragment" />
        <activity
            android:name="com.twilio.video.docapp.ui.splash.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter
                android:autoVerify="true"
                tools:targetApi="m">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/web_app_domain"
                    android:pathPrefix="/room"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.twilio.video.docapp.ui.login.LoginActivity"
            android:theme="@style/AppTheme.LoginScreen"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name="com.twilio.video.docapp.ui.room.RoomActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Lobby"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.twilio.video.docapp.ui.settings.SettingsActivity"
            android:parentActivityName="com.twilio.video.docapp.ui.room.RoomActivity"
            android:theme="@style/AppTheme.Settings" />

        <service
            android:name="com.twilio.video.docapp.ui.room.VideoService"
            android:foregroundServiceType="mediaProjection" />
    </application>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

</manifest>